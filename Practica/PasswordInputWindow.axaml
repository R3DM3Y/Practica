<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Practica.PasswordInputWindow"
        Title="InputWindow"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="20" Spacing="15" Width="250">
        <TextBox x:Name="PasswordBox" 
                 PasswordChar="*"
                 Watermark="Введите пароль"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <Button Content="Отмена" Click="CancelButton_Click" Width="80"/>
            <Button Content="ОК" Click="OkButton_Click" Width="80"/>
        </StackPanel>
    </StackPanel>
</Window>