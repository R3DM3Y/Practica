<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="500"
        x:Class="Practica.AddWindow"
        Title="Добавление объекта недвижимости"
        WindowStartupLocation="CenterOwner">
    <ScrollViewer>
        <StackPanel Margin="20" Spacing="10">
            <TextBlock Text="Добавление объекта недвижимости" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            
            <TextBlock Text="Название:" FontWeight="SemiBold"/>
            <TextBox x:Name="TitleBox" Watermark="Введите название"/>
            
            <TextBlock Text="Описание:" FontWeight="SemiBold" Margin="0,10,0,0"/>
            <TextBox x:Name="DescriptionBox" Watermark="Введите описание" AcceptsReturn="True" Height="60"/>
            
            <TextBlock Text="Адрес:" FontWeight="SemiBold" Margin="0,10,0,0"/>
            <TextBox x:Name="AddressBox" Watermark="Введите адрес"/>
            
            <Grid ColumnDefinitions="*,*" Margin="0,10,0,0">
                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                    <TextBlock Text="Цена (₽):" FontWeight="SemiBold"/>
                    <TextBox x:Name="PriceBox" Watermark="0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                    <TextBlock Text="Площадь (м²):" FontWeight="SemiBold"/>
                    <TextBox x:Name="AreaBox" Watermark="0"/>
                </StackPanel>
            </Grid>
            
            <Grid ColumnDefinitions="*,*" Margin="0,10,0,0">
                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                    <TextBlock Text="Комнат:" FontWeight="SemiBold"/>
                    <TextBox x:Name="RoomsBox" Watermark="0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                    <TextBlock Text="Этаж:" FontWeight="SemiBold"/>
                    <TextBox x:Name="FloorBox" Watermark="0"/>
                </StackPanel>
            </Grid>
            
            <TextBlock Text="Всего этажей:" FontWeight="SemiBold" Margin="0,10,0,0"/>
            <TextBox x:Name="TotalFloorsBox" Watermark="0"/>
            
            <TextBlock Text="Путь к фото:" FontWeight="SemiBold" Margin="0,10,0,0"/>
            <TextBox x:Name="PhotoPathBox" Watermark="Путь к изображению"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,20,0,0">
                <Button Content="Отмена" Width="80" Click="CancelButton_Click"/>
                <Button Content="Сохранить" Width="140" Background="#FF4F00" Foreground="White" Click="SaveButton_Click"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
