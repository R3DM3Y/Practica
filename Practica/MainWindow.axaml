                            <Setter Property="Cursor" Value="Hand"/>
                        </Style>
                        <Style Selector="Button.admin-mode">
                            <Setter Property="Background" Value="#FF4F00"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Style>
                    </Button.Styles>
                </Button>
            </StackPanel>
        </Border>
        
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="5" Spacing="10">
            <TextBlock x:Name="RecordsCounter" FontWeight="Bold"/>
        </StackPanel>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>    
            </Grid.ColumnDefinitions>
            <Border x:Name="FiltersPanel" Grid.Column="0"
                    Width="250"
                    Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="0,0,1,0"
                    HorizontalAlignment="Left"
                    Margin="-250,0,0,0"
                    ZIndex="1000">
                <ScrollViewer>
                    <StackPanel Spacing="10" Margin="10">
                        <TextBlock Text="–§–∏–ª—å—Ç—Ä—ã" FontWeight="Bold" FontSize="16"/>
                        
                        <Border Background="White" Padding="10" CornerRadius="5" BorderBrush="#E0E0E0" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="–¶–µ–Ω–∞" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBox x:Name="PriceFromBox" Watermark="–û—Ç" Width="80"/>
                                    <TextBox x:Name="PriceToBox" Watermark="–î–æ" Width="80"/>
                                </StackPanel>
                            </StackPanel>
