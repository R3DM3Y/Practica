                </ScrollViewer>
            </Border>
            
            <ListBox x:Name="PropertyList" Grid.Column="1"
                     Background="White"
                     BorderThickness="0"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     SelectionMode="Single">
                <ListBox.ItemTemplate>
    <DataTemplate>
        <Border Background="White" Margin="0,0,0,10" CornerRadius="8" Padding="15" BorderBrush="#E0E0E0" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="150"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" Width="180" Height="120" CornerRadius="5" Background="#F5F5F5">
                    <Image Source="{Binding Image}" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                
                <StackPanel Grid.Column="1" Margin="15,0">
                    <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="Bold" TextWrapping="Wrap" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding Address}" FontSize="12" Foreground="#666" TextWrapping="Wrap" Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal" Spacing="15">
                        <TextBlock Text="{Binding Rooms, StringFormat='{}–ö–æ–º–Ω–∞—Ç: {0}'}" FontSize="12"/>
                        <TextBlock Text="{Binding Area, StringFormat='{}–ü–ª–æ—â–∞–¥—å: {0} –º¬≤'}" FontSize="12"/>
                        <TextBlock Text="{Binding Floor, StringFormat='{}–≠—Ç–∞–∂: {0}/{1}', ConverterParameter={Binding TotalFloors}}" FontSize="12"/>
                    </StackPanel>

                    <!-- –ö–ù–û–ü–ö–ò –ê–î–ú–ò–ù–ò–°–¢–†–ê–¢–û–†–ê - –ò–°–ü–†–ê–í–õ–ï–ù–ù–´–ô –í–ê–†–ò–ê–ù–¢ -->
                    <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0"
