                                Cursor="Hand"/>
                        <Button Content="üóëÔ∏è –£–¥–∞–ª–∏—Ç—å"
                                Click="DeleteButton_Click"
                                Tag="{Binding}"
                                Padding="8,5"
                                Background="#FF0000" 
                                Foreground="White"
                                Cursor="Hand"/>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding Price, StringFormat='{}‚ÇΩ {0:N0}'}" FontSize="18" FontWeight="Bold" Foreground="#FF4F00" Margin="0,0,0,10"/>
                    <Button Content="–ü–æ–¥—Ä–æ–±–Ω–µ–µ" Tag="{Binding}" Click="DetailsButton_Click" Width="120" Height="35" Background="#FF4F00" Foreground="White" FontSize="14" CornerRadius="5" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>
    </DataTemplate>
</ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </DockPanel>
</Window>