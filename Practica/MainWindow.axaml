                            <StackPanel>
                                <TextBlock Text="–ö–æ–º–Ω–∞—Ç—ã" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <CheckBox x:Name="Room1CheckBox" Content="1 –∫–æ–º–Ω–∞—Ç–∞" Margin="0,2"/>
                                <CheckBox x:Name="Room2CheckBox" Content="2 –∫–æ–º–Ω–∞—Ç—ã" Margin="0,2"/>
                                <CheckBox x:Name="Room3CheckBox" Content="3 –∫–æ–º–Ω–∞—Ç—ã" Margin="0,2"/>
                                <CheckBox x:Name="Room4PlusCheckBox" Content="4 –∏ –±–æ–ª–µ–µ –∫–æ–º–Ω–∞—Ç" Margin="0,2"/>
                            </StackPanel>
                        </Border>
